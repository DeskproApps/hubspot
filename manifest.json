{
  "name": "@deskpro-apps/hubspot",
  "title": "HubSpot",
  "description": "Synchronize your support and sales teams for better and faster results.",
  "version": "1.0.2",
  "scope": "agent",
  "isSingleInstall": false,
  "hasDevMode": true,
  "targets": [{
    "target": "user_sidebar",
    "entrypoint": "index.html"
  }],
  "entityAssociations": {
    "linkedHubspotContacts": {
      "title": "Linked HubSpot Contact",
      "entity": "person",
      "type": "external_id"
    }
  },
  "settings": {
    "client_id": {
      "title": "Client Id",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": false,
      "order": 10
    },
    "client_secret": {
      "title": "Client Secret",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": true,
      "order": 20
    },
    "redirect_uri": {
      "title": "Install URL (OAuth)",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": true,
      "order": 30
    },
    "global_access_token": {
      "title": "",
      "type": "app_embedded",
      "options": {
        "entrypoint": "#/admin/global-sign-in"
      },
      "isRequired": true,
      "isBackendOnly": true,
      "order": 40
    }
  },
  "proxy": {
    "whitelist": [{
      "url": "https://api.hubapi.com/.*",
      "methods": ["GET", "POST"],
      "timeout": 10
    }]
  }
}
