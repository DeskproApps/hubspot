{
  "name": "@deskpro-apps/hubspot",
  "title": "HubSpot",
  "description": "Connect with HubSpot and view and update information from your CRM while in Deskpro tickets",
  "version": "1.0.4",
  "scope": "agent",
  "isSingleInstall": false,
  "hasDevMode": true,
  "targets": [{
    "target": "user_sidebar",
    "entrypoint": "index.html"
  }],
  "entityAssociations": {
    "linkedHubspotContacts": {
      "title": "Linked HubSpot Contact",
      "entity": "person",
      "type": "external_id"
    }
  },
  "settings": {
    "api_token": {
      "title": "API Token",
      "description": "Token provided when you set up the private app in HubSpot",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": true,
      "order": 10
    }
  },
  "proxy": {
    "whitelist": [{
      "url": "https://api.hubapi.com/.*",
      "methods": ["GET", "POST"],
      "timeout": 30
    }]
  }
}
