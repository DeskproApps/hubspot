{
  "name": "@deskpro-apps/hubspot",
  "title": "HubSpot",
  "description": "Connect with HubSpot and view and update information from your CRM while in Deskpro tickets",
  "appStoreUrl": "https://www.deskpro.com/product-embed/apps/hubspot",
  "version": "1.1.5",
  "scope": "agent",
  "isSingleInstall": false,
  "hasDevMode": true,
  "targets": [{ "target": "user_sidebar", "entrypoint": "index.html" }],
  "serveUrl": "https://apps-cdn.deskpro-service.com/__name__/__version__",
  "entityAssociations": {
    "linkedHubspotContacts": {
      "title": "Linked HubSpot Contact",
      "entity": "person",
      "type": "external_id"
    }
  },
  "settings": {
    "use_deskpro_saas": {
      "title": "One-Click Installation",
      "type": "boolean",
      "default": true,
      "isRequired": false,
      "isBackendOnly": false,
      "order": 5
    },
    "use_api_token": {
      "title": "Use API Token",
      "type": "boolean",
      "isRequired": false,
      "isBackendOnly": false,
      "default": false,
      "condition": "settings.use_deskpro_saas != true",
      "order": 10
    },
    "api_token": {
      "title": "API Token",
      "description": "Token provided when you set up the private app in HubSpot",
      "type": "string",
      "isRequired": false,
      "isBackendOnly": true,
      "condition": "settings.use_deskpro_saas != true && settings.use_api_token == true",
      "order": 20
    },
    "client_id": {
      "title": "Client ID",
      "type": "string",
      "isRequired": false,
      "isBackendOnly": false,
      "condition": "settings.use_deskpro_saas != true && settings.use_access_token != true",
      "order": 30
    },
    "client_secret": {
      "title": "Client Secret",
      "type": "string",
      "isRequired": false,
      "isBackendOnly": true,
      "condition": "settings.use_deskpro_saas != true && settings.use_access_token != true",
      "order": 40
    },
    "callback_url": {
      "title": "Callback URL",
      "type": "app_embedded",
      "options": {
        "entrypoint": "#/admin/callback",
        "height": 80
      },
      "isRequired": false,
      "isBackendOnly": true,
      "condition": "settings.use_deskpro_saas != true && settings.use_access_token != true",
      "order": 50
    },
    "default_dont_add_note_when_linking_contact": {
      "title": "Don't leave a note on the contact profile in HubSpot when it is linked to a user in Deskpro",
      "description": "",
      "type": "boolean",
      "isRequired": false,
      "isBackendOnly": false,
      "order": 60
    },
    "mapping_contact": {
      "title": "Contact Field Mapping",
      "type": "app_modal",
      "options": {
        "entrypoint": "#/admin/mapping/contact",
        "label": "Edit Mapping",
        "icon": "edit",
        "height": 500
      },
      "isRequired": false,
      "isBackendOnly": false,
      "order": 70
    },
    "mapping_deal": {
      "title": "Deal Field Mapping",
      "type": "app_modal",
      "options": {
        "entrypoint": "#/admin/mapping/deal",
        "label": "Edit Mapping",
        "icon": "edit",
        "height": 500
      },
      "isRequired": false,
      "isBackendOnly": false,
      "order": 80
    }
  },
  "proxy": {
    "whitelist": [
      {
        "url": "https://api.hubapi.com/.*",
        "methods": ["GET", "POST", "PUT", "PATCH"],
        "timeout": 30
      }
    ]
  }
}
